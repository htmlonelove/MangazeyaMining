extends ../components/base/layout

block variables
  - const title = "Главная - Мангазея Майнинг" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    //- на странице запрещен "голый" код
    //- все блоки вставляются из папки pug/components/blocks
    h1.visually-hidden Компания Мангазея Майнинг
    +intro(indexIntro)
    +employer(employerData).after-sticky-intro
    +about-facts(aboutFactsData).after-sticky-intro
    +interview(interviewGenData).after-sticky-intro
    +info-block(miningData).after-sticky-intro.info-block--accent.info-block--mining
    +img-slider(jobSliderData).after-sticky-intro.job
    +info-block(jobData).after-sticky-intro.info-block--vacancy
    //- +section-header(indexGeographySection).section-header--blue
    +contacts-city(contactsCityData).after-sticky-intro

block modals
  +modal("modal--video")(data-modal="video")
