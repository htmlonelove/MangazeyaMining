mixin footer(footerMods, currentUrl)

  -
    const footerNav = [
      {
        title: 'Главная',
        href: 'index.html',
      },
      {
        title: 'Компания',
        href: 'company.html',
      },
      {
        title: 'Активы',
        href: '#',
      },
      {
        title: 'Устойчивое развитие',
        href: '#',
      },
      {
        title: 'Поставщикам',
        href: '#',
      },
      {
        title: 'карьера',
        href: '#',
      },
      {
        title: 'производственная система',
        href: '#',
      },
      {
        title: 'новости',
        href: '#',
      },
      {
        title: 'Контакты',
        href: '#',
      },
    ]

  +running-line()
  footer.footer(class=footerMods)&attributes(attributes)
    .footer__inner
      .footer__img-wrp
        +picture("content", "footer", "jpg", 361, 295, "Процесс отливки золота")
        +icon("footer-icon", 84, 118).footer__img-icon
      .footer__info
        .footer__nav
          .container
            ul.footer__list
              each item in footerNav
                li.footer__item
                  if (item.href === currentUrl)
                    a.caps-12.link.link--disabled.footer__nav-link(href=item.href)!=item.title
                  else
                    a.caps-12.link.footer__nav-link(href=item.href)!=item.title

        .footer__contacts
          .container
            .footer__contact
              span.text-14.footer__contact-title Телефон в&nbsp;Москве
              a.link.footer__contact-link(href='tel:+74956475555', aria-label='Позвонить в Мангазея Майнинг') +7 495 647 55 55

            .footer__contact
              span.text-14.footer__contact-title Email
              a.link.footer__contact-link(href='mailto:mining@mangazeya.ru', aria-label='Отправить письмо по электронной почте') mining@mangazeya.ru

            +link-download({name:"скачать презентацию", href: "./pdf/MangazeyaGroup.pdf", size: "340 kb", ext: "pdf"})

    .footer__bottom
      .container
        p.text-14.footer__copyright ©2022 Мангазея Майнинг

        .footer__development
          span.text-14.footer__development-text Дизайн, разработка сайта, создание контента &mdash;
          a.text-14.link.footer__development-link(href="https://greencow.ru/", target="_blank", rel="nofollow noopener noreferrer", aria-label="Перейти на страницу компании Greencow") Greencow

