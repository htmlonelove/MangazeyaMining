-
  const principlesSectionData = [
      {
       text: "Взаимное доверие партнеров, уважение, ответственность"
      },
      {
       text: "Повышение качества продукции, технологий, создание новых видов продукции"
      },
      {
       text: "Постоянное <br>совершенствование <br>процессов"
      },
  ]

mixin principles(data)
 section.principles
   +section-header(principlesSection)
   .principles__slider-container(data-principles-slider-container)
    .principles__slider.swiper(data-principles-slider)
      .swiper-wrapper
       - for (let i = 1; i < data.length + 1; i++)
          .swiper-slide.principles__item
            p.heading-4.principles__text!=data[i - 1].text
            .principles__pagination.nav-count(class=paginationMod, data-pagination)
               if i < 10
                span.caps-12.nav-count__current!="0" + i
               else
                span.caps-12.nav-count__current!=i
               span.caps-12.nav-count__del &nbsp;/&nbsp;
               if data.length < 10
                span.caps-12.nav-count__total!="0" + data.length
               else
                span.caps-12.nav-count__total!=data.length
    +slider-tools().principles__tools
