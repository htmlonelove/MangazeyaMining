mixin about-facts(props)
  if props
    section.about-facts
      .section-header
        .container
          h2.caps-12.section-header__title !{props.title.main}
            if props.title.second
              span.second !{props.title.second}
          p.heading-2-caps.section-header__subtitle !{props.subtitle.main}
            if props.subtitle.second
              span.second !{props.subtitle.second}
          p.text-14.section-header__description !{props.description}
      .about-facts__body(data-facts-slider-container)
        .about-facts__slider.swiper(data-facts-slider)
          .swiper-wrapper
            .swiper-slide.about-facts__item
              .fact-item.fact-item--statistic
                p.heading-2-caps.fact-item__title !{props.factsList[0].total}
                p.text-14.fact-item__description !{props.factsList[0].details}
                ul.fact-item__statistic
                  each stat in props.factsList[0].statisticData
                    li.statistic-item
                      span.caps-12.statistic-item__property !{stat.property}
                      span.caps-12.statistic-item__value !{stat.value}
                      span.statistic-item__indication(class=stat.indicator)
            .swiper-slide.about-facts__item
              .fact-item.fact-item--statistic
                p.heading-2-caps.fact-item__title !{props.factsList[1].total}
                p.text-14.fact-item__description !{props.factsList[1].details}
                ul.fact-item__statistic
                  each stat in props.factsList[1].statisticData
                    li.statistic-item
                      span.caps-12.statistic-item__property !{stat.property}
                      span.caps-12.statistic-item__value !{stat.value}
                      span.statistic-item__indication(class=stat.indicator)
            .swiper-slide.about-facts__item
              .fact-item
                p.heading-2-caps.fact-item__title !{props.factsList[2].total}
                p.text-14.fact-item__description !{props.factsList[2].details}
              .fact-item
                p.heading-2-caps.fact-item__title !{props.factsList[3].total}
                p.text-14.fact-item__description !{props.factsList[3].details}
              .fact-item
