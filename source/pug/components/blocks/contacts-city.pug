mixin contacts-city(props)
  section.contacts-city&attributes(attributes)
    .contacts-city__tabs.city-tabs(data-tabs="parent")
      //- +section-header(props.header)
      .city-tabs__content(data-tabs="content")
        +section-header(props.header)
        .city-tabs__controls(data-tabs="controls")
          each button in props.tabs.controls
            button.city-tabs__nav-button(data-tabs="control") !{button}
        each city in props.tabs.content
          .city-item(data-city, data-tabs="element")
            .city-item__video-wrapper
              video(data-video-autoplay="false", preload="auto", muted, playsinline, loop, data-src=`video/${city.video.name}.${city.video.format}`)
            .city-item__content(data-city-content)
              p.caps-12.city-item__title !{city.name}
              .city-item__contacts
                a.heading-2-caps.city-item__phone(href=city.phone.href) !{city.phone.text}
                p.text-14.city-item__address !{city.address}
              .city-item__footer
                span.caps-12.city-item__time(data-city-time) !{city.time}
                span.caps-12.city-item__temperature(data-city-temperature) !{city.temperature} #[span &deg;C]
            .city-item__map
              //- +map()
            button.city-item__button-location(type="button", data-city-location)
              +icon('icon-marker', 20, 20)


